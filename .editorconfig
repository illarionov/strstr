root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 90
tab_width = 4

# Markdown
[{*.md, *.markdown}]
indent_size = 2
max_line_length = 90
trim_trailing_whitespace = false

[{*.yaml,*.yml}]
indent_size = 2

[{Makefile, *.mk}]
indent_style = tab
